{#
Function for getting the badge style for a given set of total and earned points
#}
{% macro getBadgeStyle(earned, total) %}
    {% if earned is defined and total is defined %}
        {% set percent = earned / total %}
        {% if percent < 0.5 %}
            red-background
        {% elseif percent < 0.8 %}
            yellow-background
        {% else %}
            green-background
        {% endif %}
    {% endif %}
{% endmacro %}