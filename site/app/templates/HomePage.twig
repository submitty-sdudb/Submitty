<div class="content">
    <div class="row">
        <div class="box col-md-6">
            <h1>About You</h1>
            {# This is a layout table #}
            <table>
                <tbody>
                <tr>
                    <td><b>Username:</b> {{ user.getId() }} </td>
                </tr>
                <tr>
                    <td><b>First Name:</b> {{ user.getDisplayedFirstName() }} </td>
                    <td><a onclick="userNameChange()"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a></td>
                </tr>
                <tr>
                    <td><b>Last Name:</b> {{ user.getDisplayedLastName() }} </td>
                </tr>
                <tr>
                    <td><b>Email:</b> {{ user.getEmail() }} </td>
                </tr>
                {% if show_change_password %}
                    <tr>
                        <td><b>Change Password</b></td>
                        <td><a onclick="passwordChange()"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a></td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="box col-md-6">
            {% for ranks in statuses %}
                {% if loop.index == 1 or ranks|length > 0 %}
                    <h2>Your {{ loop.index == 1 ? "" : "Archived " }}Courses</h2>
                    {# This is also a layout table #}
                    <table class="courses-table">
                        <tbody>
                        {% for rank in ranks %}
                            <tr>
                                <td colspan="8">
                                    <h3>{{ rank.title }}</h3>
                                </td>
                            </tr>
                            {% for course in rank.courses %}
                                <tr>
                                    <td>
                                        <a id="{{ course.getSemester() }}_{{ course.getTitle() }}" class="btn btn-primary btn-block text-left" style="text-align:left; padding-left:10px" href="{{ core.buildNewUrl([course.getSemester(), course.getTitle()]) }}">
                                            {{ course.getLongSemester() }} &nbsp; &nbsp;
                                            {{ course.getCapitalizedTitle() }} &nbsp; &nbsp;
                                            {% if course.getDisplayName() != "" %}
                                                {{ course.getDisplayName() }}
                                            {% endif %}
                                            {{ user.accessAdmin() }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                        </tbody>
                    </table>
                    {% if not (loop.index == statuses|length or statuses[loop.index0 + 1]|length == 0) %}
                        <br>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% include 'EditNameForm.twig' %}
{% if show_change_password %}
    {% include 'ChangePasswordForm.twig' %}
{% endif %}
