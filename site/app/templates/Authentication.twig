<div class="content">
    <h2>Submitty Login</h2>
    <!--
    <em>Note: Registered students have not yet been uploaded to the Submitty course databases.  Please check back later.</em>
    -->
    <div class="sub">
        <form action="{{ core.getConfig().getSiteUrl() }}" method="post" id="login">
            <input type="hidden" name="component" value="authentication" />
            <input type="hidden" name="page" value="checkLogin" />
            {% for key, value in old %}
                <input type='hidden' name='old_{{ key }}' value='{{ value }}' />
            {% endfor %}
            <input type="text" name="user_id" placeholder="User ID" autofocus/><br />
            <input type="password" name="password" placeholder="Password" /><br />
            <label for="stay_logged_in">Stay Logged In</label> <input type="checkbox" name="stay_logged_in" checked /><br />
            <input type="submit" name="login" value="Login" class="btn btn-default" />
        </form>
    </div>
</div>