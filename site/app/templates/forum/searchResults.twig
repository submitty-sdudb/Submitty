<style>
    .hoverable:hover {
        -webkit-filter: brightness(85%);
        -webkit-transition: all .5s ease;
        -moz-transition: all .5s ease;
        -o-transition: all .5s ease;
        -ms-transition: all .5s ease;
        transition: all .5s ease;
    }
</style>

<div class="content forum_content">

    {%  include "forum/ForumBar.twig" with {
        "forum_bar_buttons_right" : buttons,
        "forum_bar_buttons_left" : [],
        "show_threads" : False,
        "thread_exists" : True,
        "show_more" : False
    } %}

    <div id="search_wrapper">
        <table style="" class="table table-striped table-bordered persist-area table-hover">
            <thead class="persist-thead">
            <tr>
                <td width="45%">Post Content</td>
                <td width="25%">Author</td>
                <td width="10%">Timestamp</td>
            </tr>
            </thead>
            <tbody>
                {% for thread in threads %}
                    <tr class="info persist-header hoverable" title="Go to thread" style="cursor: pointer;" onclick="window.location = '{{ thread.thread_link }}';">
                        <td colspan="10" style="text-align: center"><h4>{{ thread.thread_title }}</h4></td>
                    </tr>
                    {% for post in thread.posts %}
                        <tr title="Go to post" style="cursor: pointer;" onclick="window.location = '{{ post.post_link }}';" id="search-row-{{ post.count }}" class="hoverable">
                            <td align="left"><pre class='pre_forum'><p class="post_content" style="white-space: pre-wrap; ">{{ post.post_content }}</p></pre></td>
                            <td>{{ post.visible_username }}</td>
                            <td>{{ post.posted_on }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
        {% if count_threads == 0 %}
            <h4 style="padding-bottom:20px;text-align:center;margin-top:20px;">No threads match your search criteria.</h4>
        {% endif %}
    </div>

</div>